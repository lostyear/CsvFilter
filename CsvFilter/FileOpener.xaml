<Window x:Class="CsvFilter.FileOpener"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FileOpener" Height="140" Width="400">
  <Grid>
    <Grid.RowDefinitions >
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="4*" />
        <ColumnDefinition Width="1*" />
      </Grid.ColumnDefinitions>
      <TextBlock x:Name="tbFilePath" Text="Open file" FontSize="16" VerticalAlignment="Center" Margin="10" Background="LightGray"/>
      <Button x:Name="btnOpen" Grid.Column="1" Content="Open" Margin="10" Click="btnOpen_Click"/>
    </Grid>
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="3*" />
        <ColumnDefinition Width="2*"/>
      </Grid.ColumnDefinitions>
      <Grid Grid.Column="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition/>
          <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnOkey" Grid.Column="0" Margin="10" Content="OK" Click="btnOkey_Click"/>
        <Button x:Name="btnCancel" Grid.Column="1" Margin="10" Content="Cancel" Click="btnCancel_Click"/>
      </Grid>
    </Grid>
  </Grid>
</Window>
