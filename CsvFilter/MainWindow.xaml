      </StackPanel>
    </ScrollViewer>
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="80"/>
        <ColumnDefinition Width="80"/>
      </Grid.ColumnDefinitions>
      <Button x:Name="btnApply" Content="Apply" Grid.Column="2" Margin="5" Click="btnApply_Click" />
